
# обновить все что есть
$ sudo apt update
$ sudo apt upgrate

# нужен git (без настроек)
$ sudo apt install git

# нужен ансибл
$ sudo apt install software-properties-common
$ sudo apt-add-repository ppa:ansible/ansible
$ sudo apt update
$ sudo apt install ansible

# забрать этот репо
$ git clone git://github.com/suvit/dot-files ~/dotfiles
